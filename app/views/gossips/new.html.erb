<div class="container text-center">
  <h2 class="text-center p-3">ðŸ¤« Create your gossip ðŸ¤«</h2>

  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <% if @gossip.errors.any? %>
      <% @gossip.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert">
          <%= message %>
        </div>
      <% end %>
    <% end %>

    <div class="form-group">
      <%= label_tag 'Title', name='Title' %><br/>
      <%= text_field_tag 'title','', size: 50%>
      <br /> <br />
    </div>

    <div class="form-group">
      <%= label_tag 'Content', name='Content' %><br/>
      <%= text_area_tag 'content', nil, size: "50x8" %>
      <br /> <br />
    </div>

    <button type="submit" class="btn btn-outline-secondary">Create Gossip</button>
    <% end %>
  </form>

</div>




