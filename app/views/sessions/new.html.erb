<div class="container text-center">
  <h2 class="text-center p-3"> ⚡️ Please connect you ⚡️ </h2>

 <div class="row justify-content-center">
  <div class="w-50 p-3"> 
    <%= form_tag url_for(action: 'create'), method: "post" do %>

        <div class="form-group">
          <%= label_tag 'Email', name='Email' %><br/>
          <%= text_field_tag :email, params[:email], class: 'form-control' %>
          <br /> <br />
        </div>

        <div class="form-group">
          <%= label_tag 'Password', name='Password' %><br/>
          <%= password_field_tag :password, params[:password], class: 'form-control' %>
          <br /> <br />
        </div>
      <%= submit_tag "Connect", :class => "btn btn-outline-primary" %>
      <% end %>
    </div>
  </div> 

</div>
